datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          Int         @id @default(autoincrement())
    email       String      @unique
    password    String      @db.VarChar(30)
    createdAt   DateTime    @default(now())
    role        Role        @default(USER)
}

enum Role {
    USER
    ADMIN
}
